# NotebookLM API and Telegram Bot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# API server host (default: 0.0.0.0 for all interfaces)
API_HOST=0.0.0.0

# API server port (default: 8000)
API_PORT=8000

# API key for external access (optional, leave empty for no auth)
API_KEY=your-api-key-here

# API rate limit (requests per minute per IP/key)
API_RATE_LIMIT=100

# =============================================================================
# Telegram Bot Configuration
# =============================================================================

# Telegram bot token from @BotFather (required for bot)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Telegram rate limit (messages per minute per user)
TELEGRAM_RATE_LIMIT=30

# Admin user IDs (comma-separated, these users have admin privileges)
TELEGRAM_ADMIN_USERS=123456789,987654321

# Allowed user IDs (comma-separated, leave empty to allow all users)
TELEGRAM_ALLOWED_USERS=

# =============================================================================
# NotebookLM Configuration
# =============================================================================

# NotebookLM profile name (for multi-account support)
NOTEBOOKLM_PROFILE=default

# Data directory for auth tokens (default: ~/.notebooklm-mcp-cli)
NOTEBOOKLM_DATA_DIR=

# Query timeout in seconds (default: 120)
NOTEBOOKLM_QUERY_TIMEOUT=120.0

# Interface language (default: en)
NOTEBOOKLM_HL=en

# =============================================================================
# Studio Configuration
# =============================================================================

# Poll interval for studio status checks (seconds)
STUDIO_POLL_INTERVAL=10

# Maximum wait time for studio content generation (seconds)
STUDIO_MAX_WAIT=600

# =============================================================================
# Optional: Redis Configuration
# =============================================================================

# Redis URL for rate limiting and caching (optional)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false
